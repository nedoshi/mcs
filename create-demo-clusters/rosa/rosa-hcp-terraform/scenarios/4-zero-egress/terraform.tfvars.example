# scenarios/4-zero-egress/terraform.tfvars.example

# AWS Configuration
aws_region         = "us-east-1"
availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]

# Cluster Configuration
cluster_name          = "rosa-zero-egress"
openshift_version     = "4.14"
replicas              = 3
compute_machine_type  = "m5.xlarge"

# VPC Configuration
create_vpc = true
vpc_cidr   = "10.0.0.0/16"

# RHCS Configuration
rhcs_token               = "your-token-here"
create_account_roles     = false
existing_account_role_prefix = "rosa-account"
create_admin_user        = true

# VPC Endpoints (required for zero egress)
vpc_interface_endpoints = [
  "ec2",
  "ecr.api",
  "ecr.dkr",
  "elasticloadbalancing",
  "sts",
  "logs",
  "secretsmanager",
  "kms",
  "elasticfilesystem"
]

# Private ECR
create_ecr_repository = true

# HTTP Proxy (optional - for approved external sites)
enable_http_proxy = false
# proxy_instance_type = "t3.small"
# no_proxy = ".cluster.local,.svc,10.0.0.0/16,169.254.169.254,.amazonaws.com"

# Bastion Host
bastion_instance_type       = "t3.micro"
bastion_ssh_public_key      = "ssh-rsa AAAAB3..."
bastion_allowed_cidr_blocks = ["203.0.113.0/24"]  # Your office IP

# S3 Bucket for backups/logs
create_s3_bucket = true

# Tags
environment = "production"
tags = {
  Owner       = "platform-team"
  CostCenter  = "engineering"
  Compliance  = "pci-dss"
  Project     = "zero-egress"
}